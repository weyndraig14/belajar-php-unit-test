{
    "name": "programmerzamannow/belajar-php-unit-test",
    "description": "Belajar PHP Unit Test",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Programmerzamannow\\BelajarPhpUnitTest\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Programmerzamannow\\BelajarPhpUnitTest\\": "test/"
        }
    },
    "authors": [
        {
            "name": "Agung Timotius Sinaga",
            "email": "agungsinaga2007@gmail.com"
        }
    ],
    "require": {
        "php" : ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "11.0.9"
    },
    "scripts": {
        "test" : "phpunit --configuration phpunit.xml",
        "test:product" : "phpunit --configuration phpunit.xml --testsuite product",
        "test:counter" : "phpunit --configuration phpunit.xml --testsuite counter"
    }
}
